/* pages/post/post.wxss */
page{
  background:#f5f5f5;
}
.type-view{
  display: flex;
  flex-direction: row;
  padding:20rpx 40rpx 20rpx 40rpx;
}
.type-view button{
  width:49%;

}
.chooseType{
    width:49%;
    color:#fff;
    background:rgb(236, 105, 105);
    border-radius: 10rpx;
    text-align: center;
    line-height: 2.55555556;
    font-size: 18px;
}
.type-view button::after{
  border:none;

  color:white;
}
.input-view{
  width:100%;
  height:auto;
  padding: 20rpx 40rpx 20rpx 40rpx;
  background:white;

}
.chooseImg{
  margin-top:10rpx;
  width:128rpx;
  height:128rpx;
}
.chooseImg:active{
  border-radius: 20rpx;
  background: rgb(194, 188, 188);
}
.price-view{
  background: #fff;
   padding: 40rpx;
  display: flex;
  flex-direction: row;
}
.productImg-view{

}
.productImg-view image{
   width:210rpx;
  height:210rpx;
  margin-left:10rpx;
}

.priceImg{
  width:50rpx;
  height:50rpx;
}

.priceInput{
  margin-left:20rpx;
}
.btnSendInfo{
  margin:80rpx 40rpx 40rpx 40rpx;
  color:white;
  background:rgb(236, 105, 105);

}
.btnSendInfo:active{
     background:rgb(233, 148, 148);
}
