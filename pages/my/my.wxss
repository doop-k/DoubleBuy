}

.salesSpace-view {
  display: flex;
  flex-direction: column;
  padding: 20rpx 40rpx 20rpx 40rpx;
  margin-top: 50rpx;
}

.salesSpace-view:active {
  background: rgb(226, 222, 222);
}

.saleImgText-view {
  display: flex;
  flex-direction: row;
}

.saleImgText-view image {
  width: 40rpx;
  height: 40rpx;
}

