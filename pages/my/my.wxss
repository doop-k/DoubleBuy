  margin-left: 10rpx;
}

.showImg-view {
  padding-left: 40rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;

}

.showImg {
  width: 150rpx;
  height: 150rpx;
  margin-left: 10rpx;

}

.underline-view {
  margin: 20rpx 40rpx 0rpx 40rpx;
  width: 100%;
  height: 0rpx;
  border: 1rpx solid #f5f5f5;
}

.setting-view {
  padding: 20rpx 0rpx 20rpx 0rpx;
  margin: 50rpx 40rpx 100rpx 40rpx;
  border-radius: 10rpx;
  border-bottom:1rpx solid rgb(116, 112, 112);
}

.setting-view image {
  width: 40rpx;
  height: 40rpx;
}

.setting-view text {
  margin-left: 20rpx;
  position: absolute;
}
.setting-view:active{
  background: rgb(226, 222, 222);
}

