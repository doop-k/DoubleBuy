page {
  background: #f5f5f5;
}

.detailHead-view {
  display: flex;
  flex-direction: row;
  padding: 0rpx 40rpx 20rpx 40rpx;
  background: white;
}

.avatarUrl {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
}

.userND-view {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 30rpx;
}

.nicknameText {
  font-size: 30rpx;
}

.dateText {
  font-size: 20rpx;
  color: rgb(138, 133, 131);
}

.priceText {
  color: rgb(243, 75, 75);
  position: absolute;
  right: 40rpx;
}

.context-view {
  margin-top: 20rpx;
  padding: 10rpx 40rpx 0rpx 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: white;
}

.detailToolImg {
  margin-top: 10rpx;
  width: 60rpx;
  margin-right: 10rpx;
}

.typeText {
  color: rgb(248, 48, 91);
}

.contextView {
  padding: 10rpx 40rpx 10rpx 40rpx;
  background: white;
}

.contextText {
  font-size: 30rpx;
}

.images-view {
  padding: 10rpx 40rpx 20rpx 40rpx;
  background: white;
}

.productImage {
  width: 210rpx;
  height: 210rpx;
  margin-left: 10rpx;
}


.browser-view {
  display: flex;
  flex-direction: row;
  padding: 0rpx 40rpx 20rpx 40rpx;
  background: white;
}



.browser-view image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 6rpx;
}

.browser-view text {
  font-size: 32rpx;
  margin-left: 10rpx;
}
.speakOfallUser-view{
  display:flex;
  flex-direction: column;
  background:white;
  padding: 0rpx 40rpx 100rpx 40rpx;

}
.speakTop-view{
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: space-around;
}
.leftLine-view{
  margin-top:20rpx;
  border-top:1rpx solid black;
  width:250rpx;
}
.rightLine-view{
  margin-top:20rpx;
  border-top:1rpx solid black;
  width:250rpx;
}
.msg-view{
  display: flex;
  flex-direction: column;
  background: white;
}
.leaveUser-view{
  display: flex;
  flex-direction: row;

}
.leaveAvatarUrl{
  width: 80rpx;
  height:80rpx;
  border-radius: 80rpx;
}
.leaveName{
  font-size: 29rpx;
  margin-top:25rpx;
  margin-left: 20rpx;
}
.leaveMsgText{
  margin-left: 100rpx;
  font-size: 30rpx;
}
.leaveTimeText{
  margin-top:20rpx;
   margin-left: 100rpx;
  font-size: 26rpx;
  color:rgb(158, 152, 152);
}
.item-view{
  border-bottom:1rpx solid rgb(173, 162, 162);
  margin-top:20rpx;
  display: flex;
  flex-direction: column;
  padding-bottom: 10rpx;
}








.leaveMsg-view {
  border-top:1rpx solid rgb(134, 119, 119);
  position:fixed;
  bottom: 0rpx;
  width: 700rpx;
  display: flex;
  flex-direction: row;
  height: auto;
  padding: 10rpx 40rpx 10rpx 40rpx;
  letter-spacing: 5rpx;
  z-index: 99;
  background: white;
}

.leaveMsg {

  overflow: hidden;
  width: 300px;
  margin-left: 10rpx;
  font-size: 40rpx;
}

.penImg {
  width: 50rpx;
  height: 50rpx;
}

.btnSend {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgb(243, 75, 75);
  color: white;
}

.btnSend:active {
  background: rgb(233, 121, 121);
}
