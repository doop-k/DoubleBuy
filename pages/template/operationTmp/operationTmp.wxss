.shadow-view {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background-color:rgba(0, 0, 0,0.5);
  z-index: 99;
}

.operation-view {
  position: absolute;
  top: 40%;
  left:10%;
  width:600rpx;
  height:auto;
  background:white;
  border-radius: 20rpx;

}
.opitem-view{

 padding:20rpx 0rpx 10rpx 20rpx;
 border-bottom:1rpx solid rgb(233, 229, 229);

}
.opitem-view:last-of-type{
   border-bottom:none;
}

.operation-view text {
  background: white;
  width:auto;
  height:100rpx;
  border-radius: 20rpx;
  font-size: 35rpx;
  color:rgb(34, 26, 26);

}

