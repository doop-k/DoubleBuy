.userPage-view {
  display: flex;
  flex-direction: column;
}

.bgImg {
  width: 100%;
  height: 422rpx;
}
.bkImgShadow{
  position: absolute;
  width:100%;
    height: 422rpx;
  background:rgba(0,0,0,0.2);
}

.userInfo-view {
  display: flex;
  flex-direction: row;
  padding-left: 40rpx;
  position: absolute;
  top: 350rpx;
}

.myAvatarUrl {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
}

.myNickname {
  margin-left: 20rpx;
  color: white;
  margin-top: 25rpx;
}

.introduce-view {
  padding-left: 40rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
}

.introduce-view image {
  width: 30rpx;
}

.introduce-view input {
  margin-left: 20rpx;
  width: 80%;
  color: #429ffc;
}

.salesSpace-view {
  display: flex;
  flex-direction: column;
  padding: 20rpx 40rpx 20rpx 40rpx;
  margin-top: 50rpx;
}

.salesSpace-view:active {
  background: rgb(226, 222, 222);
}

.saleImgText-view {
  display: flex;
  flex-direction: row;
}

.saleImgText-view image {
  width: 40rpx;
  height: 40rpx;
}

.saleImgText-view text {
  margin-left: 10rpx;
}

.showImg-view {
  padding-left: 40rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.showImg {
  width: 150rpx;
  height: 150rpx;
  margin-left: 10rpx;
}

.underline-view {
  margin: 20rpx 40rpx 0rpx 40rpx;
  width: 100%;
  height: 0rpx;
  border: 1rpx solid #f5f5f5;
}
